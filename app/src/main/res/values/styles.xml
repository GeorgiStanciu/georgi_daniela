<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cherry</item>
        <item name="colorPrimaryDark">@color/berry</item>
        <item name="colorAccent">@color/matteBlack</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/berry</item>
        <item name="colorAccent">@color/matteBlack</item>
        <item name="android:elevation">0dp</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorControlNormal">@color/chiffon</item>
    </style>

    <style name="NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorControlNormal">@color/chiffon</item>
        </style>

    <style name="NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:colorControlNormal">@color/chiffon</item>
        </style>

    <style name="NavigationMenuTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="listPreferredItemHeightSmall">18dp</item>
    </style>

    <style name="NavigationTheme" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">02dp</item>
    </style>
</resources>
