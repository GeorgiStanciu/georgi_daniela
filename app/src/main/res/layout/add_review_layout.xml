<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/chiffon"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adauga review"
        android:textSize="25sp"
        android:textColor="@color/smoke"
        android:layout_margin="16dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_close"
        android:layout_alignParentRight="true"
        android:tint="@color/smoke"
        android:id="@+id/close_add_review"
        android:layout_margin="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/smoke"
        android:layout_below="@id/close_add_review"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:id="@+id/view" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scaleX=".7"
        android:scaleY=".7"
        android:numStars="5"
        android:stepSize="1"
        android:progressTint="@color/yellow"
        android:id="@+id/add_review_rating"

        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Te rugam sa evaluezi acest produs."
        android:layout_below="@id/add_review_rating"
        android:id="@+id/no_rating_set_add_review"
        android:textColor="@color/cherry"
        android:visibility="gone"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_below="@+id/no_rating_set_add_review"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:hint="Title"
        android:padding="5dp"
        android:id="@+id/add_review_title"
        android:scrollbars="vertical"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="10"
        android:layout_marginTop="14dp"
        android:padding="5dp"
        android:hint="Continut"
        android:lines="5"
        android:scrollbars="vertical"
        android:id="@+id/add_review_content"
        android:layout_below="@+id/add_review_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Te rugam sa introduci un text despre produs."
        android:layout_below="@id/add_review_content"
        android:id="@+id/no_content_set_add_review"
        android:textColor="@color/cherry"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/cherry"
        android:gravity="center"
        android:text="TRIMITE"
        android:id="@+id/add_review_send"
        android:layout_below="@id/no_content_set_add_review"
        android:layout_marginTop="@dimen/design_navigation_padding_top_default"/>
</RelativeLayout>