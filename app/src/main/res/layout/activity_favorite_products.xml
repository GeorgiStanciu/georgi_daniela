<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/smoke"
    android:orientation="vertical"
    tools:context="com.example.georgi.shop.Activities.FavoriteProductsActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_gravity="center"
        android:paddingTop="250dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/empty_favorite_layout"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/shop"
            android:tint="@color/berry"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:id="@+id/shopping_basket_icon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de favorite este goala"
            android:textSize="25sp"
            android:gravity="center"
            android:layout_below="@id/shopping_basket_icon"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:textColor="@color/matteBlack"
            android:textStyle="bold"
            android:id="@+id/empty_favorite_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_below="@id/empty_favorite_title"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:textColor="@color/matteBlack"
            android:id="@+id/message_empty_favorite"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_button"
            android:text="Autentifica-te"
            android:textColor="@color/chiffon"
            android:textSize="@dimen/activity_horizontal_margin"
            android:id="@+id/empty_favorite_button"
            android:layout_below="@id/message_empty_favorite"
            />
    </RelativeLayout>

    <GridView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/favorite_products_grid"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="8dp"
        android:scrollbars="none"
        android:fastScrollEnabled="false"
        android:fitsSystemWindows="true"
        android:padding="@dimen/activity_horizontal_margin"
        android:numColumns="auto_fit"
        ></GridView>


</LinearLayout>
