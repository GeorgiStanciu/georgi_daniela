<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.georgi.shop.Activities.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include
        layout="@layout/profile_drawer"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/chiffon"
            android:padding="@dimen/activity_horizontal_margin">

            <EditText
                android:id="@+id/profile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:text="georgi.a@.com"
                android:textColor="@color/matteBlack" />

            <EditText
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Nume"
                android:textColor="@color/matteBlack" />

            <Spinner
                android:id="@+id/profile_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:entries="@array/profileSex"
                android:hint="Adresa"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:textColor="@color/matteBlack" />

            <EditText
                android:id="@+id/profile_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Telefon"
                android:inputType="phone"
                android:textColor="@color/matteBlack" />

            <EditText
                android:id="@+id/profile_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Data nasterii"
                android:textColor="@color/matteBlack"

                />

            <EditText
                android:id="@+id/bill_user_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Adresa"
                android:textColor="@color/matteBlack" />

            <EditText
                android:id="@+id/bill_user_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Numarul cardului"
                android:textColor="@color/matteBlack"

                />

            <Button
                android:id="@+id/orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/round_button"
                android:textColor="@color/chiffon"
                android:text="Orders"
                android:textSize="@dimen/activity_horizontal_margin" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:id="@+id/Save"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/round_button"
                    android:text="Save"
                    android:textColor="@color/chiffon"
                    android:layout_weight="1"
                    android:textSize="@dimen/activity_horizontal_margin"
                    android:layout_margin="@dimen/activity_horizontal_margin"/>
                <Button
                    android:id="@+id/logout_button"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/round_button"
                    android:text="Logout"
                    android:textColor="@color/chiffon"
                    android:layout_weight="1"
                    android:textSize="@dimen/activity_horizontal_margin"
                    android:layout_margin="@dimen/activity_horizontal_margin"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
