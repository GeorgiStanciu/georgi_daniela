<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/chiffon"
    android:id="@+id/item_card"
    card_view:cardCornerRadius="4dp"
    android:elevation="3dp"
    >

    <RelativeLayout
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:id="@+id/discount_product_ribbon"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/ribbon"
            android:tint="@color/berry"
            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:text="20 \n%"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="@color/chiffon"
            android:id="@+id/discount_product_text"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@mipmap/ic_dots_vertical"
        android:id="@+id/product_menu"
        android:padding="5dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/shop" />


        <TextView
            android:id="@+id/product_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_image"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:ellipsize="end"
            android:lines="3"
            android:text="Product Name"
            android:textColor="@color/matteBlack" />

        <TextView
            android:id="@+id/product_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="Old price"
            android:textColor="@color/mediumGray"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_old_price"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:text="Price"
            android:textColor="@color/cherry" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
